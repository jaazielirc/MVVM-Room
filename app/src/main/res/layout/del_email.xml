<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/deletequestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_email"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/negro"/>

    <TextView
        android:id="@+id/alldeletedbyemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/linked_accounts"
        android:layout_below="@id/deletequestion"
        android:textColor="@color/rojo"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_del_element3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alldeletedbyemail">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_del_keyword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/keyword"
            android:textColorHint="@color/azulCielo"
            android:textSize="20sp"
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            android:singleLine="true"
            android:inputType="textVisiblePassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/email_del_btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_del_element3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="5dp"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textSize="30sp" />
</RelativeLayout>