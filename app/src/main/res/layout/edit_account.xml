<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/edacc_toggle_usuario"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:checked="false"
            android:enabled="false"
            android:background="@drawable/toggle_edit_style"
            android:textOff=""
            android:textOn=""/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/blanco"
            android:textColorHint="@color/negro">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edacc_usuario"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:focusable="true"
            android:selectAllOnFocus="true"
            android:textSize="20sp"
            android:enabled="false"
            android:textColor="@color/negro"
            android:layout_gravity="center"
            android:singleLine="true"
            android:inputType="textEmailAddress|textNoSuggestions"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <ToggleButton
            android:id="@+id/edacc_toggle_psswrd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:checked="false"
            android:background="@drawable/toggle_edit_style"
            android:textOff=""
            android:textOn=""/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleTint="@color/negro"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/blanco"
            android:textColorHint="@color/negro">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edacc_psswrd"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword|text"
                android:singleLine="true"
                android:enabled="false"
                android:selectAllOnFocus="true"
                android:textColor="@color/negro"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
        <ToggleButton
            android:id="@+id/edacc_toggle_tipo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:checked="false"
            android:background="@drawable/toggle_edit_style"
            android:textOff=""
            android:textOn=""/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edacc_element3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/blanco"
            android:textColorHint="@color/negro">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edacc_tipo"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:ems="10"
                android:focusable="true"
                android:selectAllOnFocus="true"
                android:hint="@string/type_of_account"
                android:textColorHint="@color/agtive"
                android:textSize="20sp"
                android:enabled="false"
                android:textColor="@color/negro"
                android:layout_gravity="center"
                android:singleLine="true"
                android:inputType="textNoSuggestions"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/edacc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:elevation="5dp"/>

</LinearLayout>